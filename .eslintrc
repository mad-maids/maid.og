{
  "extends": ["@codedre/codedre", "@codedre/codedre/typescript"],

  "rules": {
    "@typescript-eslint/explicit-function-return-type": "off",
    "no-param-reassign": 0,
    "no-unused-expressions": 0,
    "global-require": 0,
    "import/no-dynamic-require": 0,
    "array-callback-return": 0,
    "no-console": "off",

    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always"
      }
    ],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never",
        "tsx": "never"
      }
    ]
  }
}
